      "state-on-color": "0x66a61e",
      "state-off-color": "0xff0029",
      "state-home-color": "0x66a61e",
      "state-not_home-color": "0xff0029",
      "state-unknown-color": "0x606060",
      "state-idle-color": "0x7990a3"
